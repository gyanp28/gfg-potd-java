/* Question Link 
https://practice.geeksforgeeks.org/problems/number-of-occurrence2259/1
*/

class Solution {
    int count(int[] arr, int n, int x) {
        // code here
        int c=0;
        for(int i=0;i<n;i++){
            if(arr[i]<x)
            continue;
            else if(arr[i]==x){
                c++;
            }
            else
            break;
        }
        return c;
    }
}